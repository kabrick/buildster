<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_project_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaizen.buildster.ProjectDisplay">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:id="@+id/h">
    <TextView
        android:text="Project Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"/>
</LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                android:elevation="3dp"
                android:layout_marginRight="20dp"
                card_view:cardBackgroundColor="#E0E0E0"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp"
                android:onClick="onSubClick">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/substructure"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="30">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Substructure"
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300,000/="
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"
                                android:id="@+id/sub_cost"/>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ProgressBar
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/sub_progress"
                                style = "?android:attr/progressBarStyleHorizontal"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/circular"
                                android:secondaryProgress="100"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/sub_tv"
                                android:gravity="center"
                                android:text="25%"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                android:elevation="3dp"
                android:layout_marginRight="20dp"
                card_view:cardBackgroundColor="#E0E0E0"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="4dp"
                android:onClick="onSupClick">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/superstructure"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="30">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Superstructure"
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300,000/="
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"
                                android:id="@+id/sup_cost"/>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ProgressBar
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/sup_progress"
                                style = "?android:attr/progressBarStyleHorizontal"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/circular"
                                android:secondaryProgress="100"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/sup_tv"
                                android:gravity="center"
                                android:text="25%"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                android:elevation="3dp"
                android:layout_marginRight="20dp"
                card_view:cardBackgroundColor="#E0E0E0"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="4dp"
                android:onClick="onRoofClick">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/roofing"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="30">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Roof"
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300,000/="
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"
                                android:id="@+id/roof_cost"/>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ProgressBar
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/roof_progress"
                                style = "?android:attr/progressBarStyleHorizontal"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/circular"
                                android:secondaryProgress="100"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/roof_tv"
                                android:gravity="center"
                                android:text="25%"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                android:elevation="3dp"
                android:layout_marginRight="20dp"
                card_view:cardBackgroundColor="#E0E0E0"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="4dp"
                android:onClick="onFinishClick">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/finishs"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="30">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Finishes"
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300,000/="
                                android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                                android:layout_marginTop="20dp"
                                android:id="@+id/finish_cost"/>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ProgressBar
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/finish_progress"
                                style = "?android:attr/progressBarStyleHorizontal"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/circular"
                                android:secondaryProgress="100"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/finish_tv"
                                android:gravity="center"
                                android:text="25%"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_bottom"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/album_title"
        android:layout_alignParentBottom="true"
        android:minHeight="?attr/actionBarSize" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:dividerPadding="8dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Project"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:layout_weight="1"
                android:onClick="delete"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a Pic"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:layout_weight="1"
                android:onClick="takePic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:layout_weight="1"
                android:onClick="exit"/>
        </LinearLayout>
        </android.support.v7.widget.Toolbar>
</RelativeLayout>
